<div class="row-fluid">

  <div class="span4">
    <div class="box_l1_hp side_nav_box">
      <%= link_to "<button class='side_nav_button replies for_notifications ' type=button'>Mentions<img class='arrow' src='/assets/arrow.png' height='10px' width='10px'></button>".html_safe, notifications_path(:school_name =>current_user.school_admin.school) %>
      <%= link_to "<button class='side_nav_button posts for_notifications active_button' type=button'>Announcements<img class='arrow' src='/assets/arrow.png' height='10px' width='10px'></button>".html_safe, announcements_notifications_path %>
      <%= link_to "<button class='side_nav_button assignments' type=button'>Assignments<img class='arrow' src='/assets/arrow.png' height='10px' width='10px'></button>".html_safe, assignments_notifications_path %>
    </div>

    <!--<div class="box_l2_hp">
    			This box has not been decided what to be used for.
    			</div>-->

    <div class="box_l3_hp">
      <div class="link_box">
    					About &#183; Help &#183; Terms &#183; Privacy &#183; Blog
        <br/>
        &#169; 2012 Studygossip
      </div>
    </div>

  </div>

  <div class="span8" id="posts">
    <h2 class="posts_title">
      Announcements
      <span id="success" style="color: green;display: none;float: right;font-size: 15px;position: relative;top: 30px;">Successfully deleted this post.</span>
    </h2>
    <% if @posts.present? %>
      <%= render :partial => 'profiles/show' %>
    <% else %>
      <span style="color: red;font-size: 15px;left: 310px;position: relative;top: -15px;">No Announcements.</span>
    <% end %>
    <input type="hidden" value="show" id="post_type" />
    <input type="hidden" value="<%= current_user.school_admin.id %>" id="school_post_type" />
  </div>
</div>
<script>
  jQuery(function() {
    jQuery(window).scroll(
    function() {
      if (($(window).scrollTop() == $(document).height() - $(window).height()) && jQuery('#posts_page').val() > 0)
      {
        if (jQuery("#post_type").val() == 'show') {
          notification_posts(jQuery('#school_post_type').val(),jQuery('#posts_page').val())
        }
      }
    });
  });
</script>
